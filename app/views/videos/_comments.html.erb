<div class="new_comment">
	<!-- (video, post, user_id, video_id, post_id, body, reply, reply_to) -->
	<input type="hidden" id="video" value="true">
	<input type="hidden" id="video_id" value="<%= @video.id%>">
	<input type="hidden" id="user_id" value="<%= @video.id%>">
	<input type="hidden" id="post" value="false">
	<input type="hidden" id="post_id" value="">
	<input type="hidden" id="reply" value="false">
	<input type="hidden" id="reply_to" value="">


	<textarea class="comment_box" id="body"
			  placeholder="Leave a comment and join the discussion"
			  ></textarea>
	<div class="info-wrapper">
		<button class="submitComment btn btn-primary-comment">Post Comment</button>
		<div class="current_user">
			<img class="current_avatar"
				 src="<%= @video.media.url(:thumb) %>" 
				 alt="<%= @video.title %>"
				>
			<h5 class="current_name">Mohamed Ahmed</h5>
		</div>
	</div>

	<div class="comment_media" id='comments'>
	   <comment-list></comment-list>
		
	</div>

</div>

